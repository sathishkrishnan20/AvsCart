<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.avs.online.avscart.Products">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:elevation="4dp"
        android:orientation="vertical"
        android:id="@+id/searchCategoryLayout">

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:elevation="4dp"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_below="@+id/searchCategoryLayout"
        android:id="@+id/userProfileLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello "
            android:textSize="@dimen/text_size_user_name"/>
        </RelativeLayout>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_below="@id/userProfileLayout">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/productLinearLayout">
<!--        <ImageView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:id="@+id/productImage"
            android:clickable="true"
            android:contentDescription="@string/product_image"
            android:layout_margin="@dimen/margin_product_image" /> !-->
</LinearLayout>

</ScrollView>
</RelativeLayout>

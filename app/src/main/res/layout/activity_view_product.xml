<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.avs.online.avscart.ViewProduct">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/view_prod_name"
        android:layout_margin="@dimen/margin_product_image"
        android:text="product Name"
        android:textSize="@dimen/text_size_user_name"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="5dp"
        android:layout_margin="0dp"
        android:foregroundGravity="center"
        android:src="@drawable/placeholder"
        android:layout_below="@+id/view_prod_name"
        android:id="@+id/view_prod_image" />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:id="@+id/prod_linear"
      android:layout_below="@+id/view_prod_image">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/indianRSsymbol"
          android:text="@string/Rs_Symbol"
          android:layout_margin="@dimen/margin_product_image"
          android:textSize="@dimen/product_price_view_image"/>

      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/view_prod_price"
        android:layout_marginTop="@dimen/margin_product_image"
        android:text="Price"
        android:textSize="@dimen/product_price_view_image"/>

</LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/view_prod_desc"
        android:layout_below="@+id/prod_linear"
        android:text="Description"
        android:textSize="@dimen/product_desc_view_image"/>

    <Button
        android:id="@+id/ProceedToCheckout_bt"
        android:layout_below="@+id/view_prod_desc"
        android:text="Proceed To Checkout"
        android:textSize="20sp"
        android:background="#000"
        android:textColor="#fff"
        android:textStyle="bold"
        android:layout_margin="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>
    </ScrollView>
</RelativeLayout>
